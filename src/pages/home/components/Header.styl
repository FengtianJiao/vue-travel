.header
  display: flex
  line-height: $headerHeight
  background: $bgColor
  color: #fff
  .header-left
    width: .64rem
    float: left
    .back-icon
      text-align: center
      font-size: .4rem
  .header-input
    flex: 1
    margin-top: .12rem
    margin-left: .2rem
    padding-left: .2rem
    border-radius: .1rem
    height: .64rem
    line-height: .64rem
    color: #ccc
    background: #fff
  .header-right
    float: right
    padding: 0 .1rem
    min-width: 1.04rem
    text-align: center
    color: #fff
    .arrow-icon
      margin-left: -.04rem
      font-size: .24rem
