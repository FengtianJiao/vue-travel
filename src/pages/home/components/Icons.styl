.icons >>> .swiper-container
  // overflow: hidden
  // swiper高度只有一半导致下部分不能拖动
  padding-bottom: 50%
  height: 0
  // background: green
.icons
  margin-top: .1rem
  .icon
    float: left
    position: relative
    // 固定宽高比
    overflow: hidden
    padding-bottom: 25%
    height: 0
    width: 25%
    // 固定宽高比
    .icon-img
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: .44rem
      box-sizing: border-box
      padding: .1rem
      .icon-img-content
        display: block
        // 居中
        margin: 0 auto
        height: 100%
    .icon-desc
      position: absolute
      // 相当于 width: 100%
      left: 0
      right: 0
      // 相当于 width: 100%
      bottom: 0
      height: .44rem
      line-height: .44rem
      text-align: center
      color: $darkTextColor
      ellipsis()
